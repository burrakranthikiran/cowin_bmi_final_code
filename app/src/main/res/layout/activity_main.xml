<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/warm_white"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/header_color"
        tools:ignore="MissingConstraints"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:layout_gravity="left"
            android:gravity="left"
            android:paddingLeft="8dp"
            android:layout_width="0dp">

            <TextView
                android:gravity="center|left"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="Home Screen"/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:layout_gravity="right"
            android:gravity="right"
            android:paddingRight="8dp"
            android:layout_width="0dp">

            <androidx.cardview.widget.CardView
                android:layout_margin="5dp"
                android:id="@+id/card_view"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="8dp">

                <ImageView
                    android:id="@+id/setting_img"
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/setting_icon_wt"/>

            </androidx.cardview.widget.CardView>





        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:background="@color/warm_white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            tools:layout_editor_absoluteX="20dp">

            <ImageView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:src="@drawable/cowin_logo" />


            <EditText
                android:id="@+id/name_box"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border_background"
                android:hint="Enter your name"
                android:textColor="@color/black"
                android:maxLines="1"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/phone_box"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border_background"
                android:hint="Enter your phone number"
                android:inputType="number"
                android:textColor="@color/black"
                android:maxLines="1"
                android:textSize="20dp" />


            <EditText
                android:id="@+id/editTextDatePicker"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border_background"
                android:clickable="true"
                android:drawableLeft="@drawable/calander"
                android:focusable="false"
                android:hint="Select a date"
                android:maxLines="1"
                android:textSize="20dp" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border_background"
                android:paddingTop="15dp"
                android:paddingBottom="15dp" />


            <Button
                android:id="@+id/bmi_activity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="25dp"
                android:background="@color/btn_color"
                android:text="continue"
                android:textColor="@color/white"
                android:textSize="20dp">

            </Button>


        </LinearLayout>

    </ScrollView>









</androidx.constraintlayout.widget.ConstraintLayout>